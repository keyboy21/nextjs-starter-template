{
	"name": "nextjs-starter-template",
	"version": "0.2.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"clean": "rm -rf .next dist node_modules",
		"lint": "biome lint",
		"check": "biome check",
		"lint:eslint": "eslint",
		"format": "biome format --write",
		"typecheck": "tsc --noEmit",
		"sortcn": "prettier ./src --write",
		"i18n:check": "i18n-check -l messages -s ru --format i18next src",
		"prepare": "husky",
		"lint:staged": "lint-staged"
	},
	"lint-staged": {
		"*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
			"biome check --write --no-errors-on-unmatched"
		],
		"messages/*.json": [
			"i18n-check -l messages -s ru --format i18next src"
		]
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.2",
		"@t3-oss/env-core": "^0.13.8",
		"@t3-oss/env-nextjs": "^0.13.8",
		"babel-plugin-react-compiler": "^1.0.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"ky": "^1.14.0",
		"lucide-react": "^0.553.0",
		"next": "^16.0.3",
		"next-intl": "^4.5.5",
		"nuqs": "^2.7.3",
		"react": "19.2.0",
		"react-dom": "19.2.0",
		"react-hook-form": "^7.66.1",
		"server-only": "^0.0.1",
		"tailwind-merge": "^3.4.0",
		"valibot": "^1.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.5",
		"@lingual/i18n-check": "^0.8.12",
		"@tailwindcss/postcss": "^4.1.17",
		"@types/node": "^24.10.1",
		"@types/react": "^19.2.5",
		"@types/react-dom": "^19.2.3",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.6",
		"prettier": "^3.6.2",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"tailwindcss": "^4.1.17",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3"
	}
}
